#!/usr/bin/env sh

setbg &		# Set the background
xrdb -merge ~/.Xdefaults &
llk &
redshift -l 52.7:21.6 -t 6500:3300 -g 0.8 -m randr -v &
pywalinit &	# sets color scheme and initializes dunst for notifications
sxhkd &	# Bind keys
# Switch to US international with Caps as Mod/Escape
setxkbmap -option caps:swapescape && killall xcape 2>/dev/null ; xcape -e 'Super_L=Escape' &
# Properties button extra Mod/Escape
xmodmap -e 'keycode 135 = Super_R' &
xset r rate 300 50 &	# Speed xrate up
unclutter &		# Remove mouse when idle
compton --config ~/.config/compton/compton.conf &
mpdupdate &
sudo rfkill unblock bluetooth &
myanacron &
